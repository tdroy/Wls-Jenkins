      	<artifactId>weblogic-maven-plugin</artifactId>
      	<version>12.1.3-0-0</version>
      	<configuration>
			<middlewareHome>C:\AppServers\wls1213</middlewareHome>
			<domainHome>C:\AppServers\wls1213\user_projects\domains\maven_domain</domainHome>
        </configuration>
        <executions>
         
         <execution>
			<id>wls-create-domain</id>
			<phase>pre-integration-test</phase>
			<goals>
				<goal>create-domain</goal>
			</goals>
			<configuration>
				<middlewareHome>C:\AppServers\wls1213</middlewareHome>
				<domainHome>C:\AppServers\wls1213\user_projects\domains\maven_domain</domainHome>
                <user>weblogic</user>
                <password>Welcome1</password>
				<domainTemplate>C:\AppServers\wls1213\user_projects\templates\base_domain_template.jar</domainTemplate>
			</configuration>
		  </execution>
		  
		<execution>
			<id>wls-wlst-start-server</id>
			<phase>pre-integration-test</phase>
			<goals>
				<goal>start-server</goal>
			</goals>
			<configuration>
				<domainHome>C:\AppServers\wls1213\user_projects\domains\maven_domain</domainHome>
			</configuration>
		</execution>
		
        <execution>
            <id>wls-deploy</id>
            <phase>install</phase>
            <goals>
              <goal>deploy</goal>
            </goals>
            <configuration>
              <adminurl>t3://127.0.0.1:7001</adminurl>
              <user>weblogic</user>
              <password>Welcome1</password>
              <source>C:\work\POC\wls-maven\Wls-Maven\target\WebDemo-beta.war</source>
              <targets>AdminServer</targets>
              <verbose>true</verbose>
			  <name>${project.build.finalName}</name>
